{
  "namespace": "scoreboard_old",

  "scoreboard_sidebar": {
    "type": "image",
    "layer": 100,
    "texture": "textures/uiold/hud/scoreboard_sidebar",
    "size": [ "100%cm", "100%c" ],
    "offset": [ -1, 0 ],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "controls": [
      {
        "displayed_objective": {
          "type": "label",
          "size": [ "default", 9 ],
          "text": "#objective_sidebar_name",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "text_alignment": "center",
          "inherit_max_sibling_width": true,
          "shadow": "$scoreboard_text_shadow",
          "locked_alpha": 1,
          "layer": 1,
          "color": "$objective_title_color",
          "bindings": [
            {
              "binding_name": "#objective_sidebar_name",
              "binding_type": "global"
            }
          ]
        }
      },
      {
        "lists": {
          "type": "panel",
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right",
          "inherit_max_sibling_width": false,
          "size": [ "100%c", "100%cm" ],
          "controls": [
            {
              "players": {
                "type": "stack_panel",
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "size": [ "100%cm + 10px", "100%c" ],
                "offset": [ 2, 0 ],
                "orientation": "vertical",
                "collection_name": "scoreboard_players",
                "factory": {
                  "name": "player_list_factory",
                  "control_name": "scoreboard_old.scoreboard_sidebar_player"
                },
                "bindings": [
                  {
                    "binding_name": "#scoreboard_sidebar_size",
                    "binding_type": "global",
                    "binding_name_override": "#collection_length"
                  }
                ]
              }
            },
            {
              "scores": {
                "type": "stack_panel",
                "anchor_from": "bottom_right",
                "anchor_to": "bottom_right",
                "size": [ "100%cm", "100%c" ],
                "orientation": "vertical",
                "collection_name": "scoreboard_scores",
                "factory": {
                  "name": "player_score_factory",
                  "control_name": "scoreboard_old.scoreboard_sidebar_score"
                },
                "bindings": [
                  {
                    "binding_name": "#scoreboard_sidebar_size",
                    "binding_type": "global",
                    "binding_name_override": "#collection_length"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "scoreboard_sidebar_player@scoreboard.scoreboard_sidebar_player": {
    "shadow": "$scoreboard_text_shadow"
  },

  "scoreboard_sidebar_score@scoreboard.scoreboard_sidebar_score": {
    "shadow": "$scoreboard_text_shadow"
  }
}